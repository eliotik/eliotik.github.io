---
import ImageSliderClient from './ImageSliderClient.tsx';
import type { ImageMetadata } from 'astro';

export interface Props {
  images: [ImageMetadata, string][];
}

const { images } = Astro.props;

// Convert ImageMetadata to plain objects for client component
const imageData = images.map(([img, alt]) => ({
  src: img.src,
  alt: alt
}));
---

<ImageSliderClient images={imageData} client:only="react" />